# gaps - match hs.grid ones
kwmc config gap 10 10
kwmc config padding 10 10 10 10

# tiling settings
kwmc config tiling bsp
kwmc config cycle-focus on
kwmc config float-non-resizable on
kwmc config lock-to-container on
kwmc config optimal-ratio 1.605

# all of this is handled with hammerspoon
kwmc config center-on-float off
kwmc config focus-follows-mouse off
kwmc config mouse-drag off
kwmc config mouse-follows-focus off
kwmc config standby-on-float off

# how to spawn windows
kwmc config spawn right
kwmc config split-ratio 0.5

# no borders, I have highlightWindow in hammerspoon
kwmc config border focused off
kwmc config border marked off

# float
kwmc rule properties={float="true"} owner="AppCleaner"
kwmc rule properties={float="true"} owner="Archive Utility"
kwmc rule properties={float="true"} owner="Finder" name="Copy"
kwmc rule properties={float="true"} owner="Finder" name="Move"
kwmc rule properties={float="true"} owner="Finder" role="AXDialog"
kwmc rule properties={float="true"} owner="Messages"
kwmc rule properties={float="true"} owner="Parallels Desktop"
kwmc rule properties={float="true"} owner="QuickTime Player"
kwmc rule properties={float="true"} owner="Reminders"
kwmc rule properties={float="true"} owner="System Preferences"
kwmc rule properties={float="true"} owner="The Unarchiver"
kwmc rule properties={float="true"} owner="Transmission"
kwmc rule properties={float="true"} owner="Tweetbot"
kwmc rule properties={float="true"} owner="iTunes" name="Mini Player"
kwmc rule properties={float="true"} owner="iTunes" name="Multiple Song Info"
kwmc rule properties={float="true"} owner="iTunes" name="Song Info"
kwmc rule properties={float="true"} role="AXDialog"

# force tile
kwmc rule properties={role="AXWindow"} owner="Accessibility Inspector"
